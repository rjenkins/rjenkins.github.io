@import "bootstrap-dark"; 
@import "syntax-highlighting";
@import "main";

.copy-button {
  background-color: #f0f0f0;
  color: #ffffff;
  border: 1px solid #ccc;
  padding: 0.2em 0.5em;
  font-size: 0.8em;
  margin: 2px;
  cursor: pointer;
  border-radius: 5px;
  opacity: 0.7;
  transition: opacity 0.2s ease-in-out;
}

.copy-button:hover {
  opacity: 1;
}

.container-fluid {
  padding-left: 0px;
  padding-right: 0px;
}
